//- Для выпалающих списков , кроме Меню пользователя - user-menu
mixin dropdown(text)
    li.dropdown-menu__item
        a.dropdown-menu__link(href="#")= text

//- Главное меню
mixin navLink(link, name, dropdown)
    if(dropdown === true)
        a.main-menu__link(href= link) #{name}
                span.icon-caret
    else
        a.main-menu__link(href= link) #{name}

//- Добавление карточек товаров (корзина)
mixin addCard(imgLink, img, title, price, size, color, pcs, pricemod)
    - mod = pricemod || ''
    li.cart-list__item
        .cart-list__img
            a(href= imgLink)
                img(src=`img/${img}.png` alt="")
        .cart-list__info
            h6.product__title
                a(href="#")= title
            .cart-list__details
                span(class="price " + mod)= price
                span.product__details
                    span= size
                    |  • 
                    span= color
                    |  • 
                    span #{pcs} pcs
        .cart-list__delete
            a.js-remove-cart(href="#")
                span.icon-close
                    span.path1
                    span.path2

//- Добавление "хлебных крошек"
mixin addBreadcrumbs(link , text)
    li.bread-crambs__item
        a.bread-crambs__link(href= link)= text
        |  /

//- Добавление Checkbox для accordion__body
mixin check-list(text, i, checked)
    li.check-list__item
        input(type="checkbox" value="value1" id= i checked= checked).styled-checkbox
        label(for= i).check-list__text= text

//- Карточка товара
mixin product(title, category, price, discount, productmod)
    - var  mod1 = productmod || ''
    .product
        .product__img
            img(src='img/1.png' alt='')
        .product__content
            h6.product__title
                a(href='#')= title
            span.product__category= category
        case mod1
            when 'sale'
                .product__footer.sale
                    span.price= price
                    span.pbadge
                        img(src='img/sale.png' alt='')
                    span.discount= discount
            when 'hit'
                .product__footer.hit
                    span.price= price
                    span.pbadge
                        img(src='img/hit.png' alt='')
            when 'new'
                .product__footer.new
                    span.pbadge
                        img(src='img/new.png' alt='')
                    span.price= price
            default
                .product__footer
                    span.price= price
        .product__card
            select.styler
                option(value='') size
                option(value='') S
                option(value='') L
                option(value='') M
            a.btn(href='#') Add to cart
            br
            a.favorite(href='#')
                span.icon.icon-heart-plus Add to wishlist

    
